{
  "extends": [
    "airbnb"
  ],
  "parser": "@babel/eslint-parser",
  "plugins": [
    "flowtype",
    "react-hooks"
  ],
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "es6": true,
      "classes": true
    }
  },
  "rules": {
    "implicit-arrow-linebreak": 0,
    "react/function-component-definition": 0,
    "react/jsx-props-no-spreading": 0,
    "react/destructuring-assignment": 0,
    "operator-linebreak": 0,
    "import/no-cycle": 0,
    "function-call-argument-newline": 0,
    "import/named": 0,
    "react/jsx-wrap-multilines": 0,
    "default-param-last": 0,
    "class-methods-use-this": 0,
    "no-else-return": 0,
    "react/jsx-indent-props": 0,
    "react/no-access-state-in-setstate": 0,
    "react/jsx-curly-newline": 0,
    "react/no-unstable-nested-components": 0,
    "no-restricted-exports": 0,
    "react/jsx-one-expression-per-line": 0,
    "react/no-unused-class-component-methods": 0,
    "import/no-useless-path-segments": 0,
    "react/jsx-no-constructed-context-values": 0,
    "react/no-invalid-html-attribute": 0,
    "react/button-has-type": 0,
    "react/jsx-no-useless-fragment": 0,
    "no-promise-executor-return": 0,
    "react/jsx-tag-spacing": 0,
    "react/static-property-placement": 0,
    "jsx-a11y/label-has-associated-control": 0,
    "import/no-self-import": 0,
    "no-shadow-restricted-names": 0,
    "react/state-in-constructor": 0,
    "prefer-exponentiation-operator": 0,
    "react/jsx-curly-brace-presence": 0,
    "react/no-arrow-function-lifecycle": 0,

    "no-underscore-dangle" : 0,
    "arrow-body-style": [0],
    "react/jsx-no-bind": [0],
    "import/no-unresolved": [0],

    "no-console": 0,
    "comma-dangle": 0,
    "object-property-newline": 0,
    "no-case-declarations": 0,
    "no-mixed-operators": 0,
    "no-bitwise": 0,
    "arrow-parens": ["error", "as-needed"],
    "operator-assignment": 0,
    "prefer-template": 0,
    "no-prototype-builtins": 0,
    "global-require": 0,
    "no-path-concat": 0,
    "consistent-return": 0,
    "no-restricted-syntax": 0,
    "no-restricted-properties": 0,
    "no-extra-boolean-cast": 0,
    "valid-typeof": 0,
    "indent": [2, 2, {"SwitchCase": 1, "flatTernaryExpressions": true}],
    "function-paren-newline": 0,
    "no-sequences": 0,
    "object-curly-newline": 0,
    "no-nested-ternary": 0,
    "newline-before-return": 0,

    "import/no-extraneous-dependencies": 0,
    "import/extensions": 0,
    "import/prefer-default-export": 0,
    "react/no-string-refs": 0,
    "react/prefer-stateless-function": 1,
    "react/no-danger": 0,
    "react/no-array-index-key": 0,
    "react/no-render-return-value": 0,
    "react/sort-comp": 0,
    "react/jsx-filename-extension": 0,
    "react/forbid-prop-types": 0,
    "react/require-default-props": 0,
    "react/no-unused-prop-types": 0,
    "react/prop-types": 0,
    "jsx-a11y/img-has-alt": 0,
    "jsx-a11y/href-no-hash": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "jsx-a11y/label-has-for": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "react-hooks/rules-of-hooks": "error",

    "no-unneeded-ternary": 0,
    "no-confusing-arrow": ["error", {"allowParens": true}],
    "no-param-reassign": 0,
    "no-plusplus": 0,
    "no-continue": 0,
    "no-script-url": 0,
    "no-debugger": 0,
    "no-constant-condition": ["error", { "checkLoops": false }],

    "flowtype/boolean-style": [ 2, "boolean" ],
    "flowtype/define-flow-type": 1,
    "flowtype/delimiter-dangle": [ 2, "never" ],
    "flowtype/generic-spacing": [ 2, "never" ],
    "flowtype/no-primitive-constructor-types": 2,
    "flowtype/no-types-missing-file-annotation": 2,
    "flowtype/no-weak-types": 1,
    "flowtype/object-type-delimiter": [ 2, "comma" ],
    "flowtype/require-parameter-type": 2,
    "flowtype/require-return-type": [ 2, "always", { "annotateUndefined": "never" } ],
    "flowtype/require-valid-file-annotation": 2,
    "flowtype/semi": [ 2, "always" ],
    "flowtype/space-after-type-colon": [ 2, "always" ],
    "flowtype/space-before-generic-bracket": [ 2, "never" ],
    "flowtype/space-before-type-colon": [ 2, "never" ],
    "flowtype/type-id-match": [ 2, "^([A-Z][a-z0-9]+)+$" ],
    "flowtype/union-intersection-spacing": [ 2, "always" ],
    "flowtype/use-flow-type": 1,
    "flowtype/valid-syntax": 1,
    "no-restricted-module-imports": 2
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  }
}
